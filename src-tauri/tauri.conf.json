{
  "$schema": "https://raw.githubusercontent.com/nicovrc/tauri/next/crates/tauri-config-schema/schema.json",
  "productName": "Terminal+",
  "version": "0.1.0",
  "identifier": "com.terminalplus.dev",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.png"
    ]
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Terminal+",
        "width": 1200,
        "height": 800,
        "minWidth": 600,
        "minHeight": 400,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}
